# --------------------------------------------------------------------
# DEFINIÇÕES DO SISTEMA
# --------------------------------------------------------------------
MOODLE_VERSION=4.4

# Nome do site Moodle
MOODLE_SITE_NAME="Portal de Cursos"
MOODLE_LANG=pt_br

# --------------------------------------------------------------------
# ADMINISTRADOR
# --------------------------------------------------------------------
MOODLE_ADMIN_USER=admin
MOODLE_ADMIN_PASSWORD=TrocarSenhaAdminAqui
MOODLE_ADMIN_EMAIL=admin@exemplo.com

# --------------------------------------------------------------------
# CONFIGURAÇÃO DO BANCO MARIADB
# --------------------------------------------------------------------
MARIADB_HOST=mariadb
MARIADB_PORT=3306
MARIADB_DATABASE=moodle
MARIADB_USER=moodle
MARIADB_PASSWORD=TrocarSenhaBD
MARIADB_ROOT_PASSWORD=TrocarSenhaRootBD

# Ajustes de performance do MariaDB
MARIADB_INNODB_BUFFER_POOL_SIZE=1G
MARIADB_INNODB_LOG_FILE_SIZE=512M
MARIADB_TRANSACTION_ISOLATION=READ-COMMITTED
MARIADB_BINLOG_FORMAT=ROW
MARIADB_CHARACTER_SET=utf8mb4
MARIADB_COLLATE=utf8mb4_unicode_ci

# --------------------------------------------------------------------
# REDIS (cache/sessão)
# --------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# --------------------------------------------------------------------
# PHP – AJUSTES DE PERFORMANCE
# --------------------------------------------------------------------
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=128M
PHP_POST_MAX_SIZE=128M

# --------------------------------------------------------------------
# PORTAS DA APLICAÇÃO
# --------------------------------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443

# --------------------------------------------------------------------
# OUTROS AJUSTES
# --------------------------------------------------------------------
ALLOW_EMPTY_PASSWORD=no
